{
  "name": "@botmock-api/client",
  "version": "0.1.0",
  "description": "nodejs client for interacting with the botmock api",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prepublishOnly": "tsc"
  },
  "keywords": [
    "botmock",
    "typescript",
    "client"
  ],
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false
      }
    }
  },
  "bugs": "https://github.com/Botmock/client/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Botmock/client.git"
  },
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/node": "12.7.11",
    "@types/node-fetch": "^2.5.2",
    "jest": "24.9.0",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "typescript": "3.6.3"
  }
}
